{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
  },
  "include": [
    "src/*.ts",
    "src/*.html"
  ],
  "exclude": [
    "node_modules"
  ]
}
